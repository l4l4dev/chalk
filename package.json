{
  "name": "chalk",
  "version": "1.0.0",
  "description": "Local-first to-do app with groups",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "webpack --watch",
    "build": "webpack --mode=production",
    "start:prod": "NODE_ENV=production electron .",
    "dist:mac": "NODE_ENV=production npm run build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac dmg --x64 --arm64",
    "dist:mac:publish": "NODE_ENV=production npm run build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac dmg --x64 --arm64 --publish always",
    "dist:mac:arm64": "NODE_ENV=production npm run build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac dmg --arm64",
    "dist:mac:x64": "NODE_ENV=production npm run build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac dmg --x64"
  },
  "build": {
    "compression": "maximum",
    "appId": "com.yourorg.chalk",
    "productName": "Chalk",
    "files": [
      "dist/**",
      "!dist/**/*.map",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "asar": true,
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "artifactName": "Chalk-mac-${arch}.dmg",
      "icon": "build/icon.png",
      "category": "public.app-category.productivity",
      "identity": null
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png"
    }
  },
    "publish": [
      {
        "provider": "github",
        "owner": "oha",
        "repo": "https://github.com/duriantaco/chalk"
      }
    ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "electron": "^37.3.1",
    "electron-builder": "^25.1.8",
    "html-webpack-plugin": "^5.6.4",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.0.13",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tailwindcss/postcss": "^4.0.13",
    "d3": "^7.9.0",
    "dompurify": "^3.2.4",
    "electron-store": "^10.0.1",
    "framer-motion": "^12.23.0",
    "marked": "^15.0.7",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.3.0",
    "react-window": "^1.8.11",
    "uuid": "^11.1.0",
    "y-indexeddb": "^9.0.12",
    "yjs": "^13.6.24"
  }
}
